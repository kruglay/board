<div class="middle">
  <div class="row">
    <div class="col-sm-2">
      тут будут рекламные баннеры
    </div>

    <div class="col-sm-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :s_name %><br/>
            <%= f.text_field :s_name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :f_name %><br/>
            <%= f.text_field :f_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :m_name %><br/>
            <%= f.text_field :m_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :login %><br/>
            <%= f.text_field :login, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br/>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t('.path_length') %>)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit t('.sign_up'), class: "btn btn-default" %>

          </div>
      <% end %>

      <div class="shared-links">
        <%= render "users/shared/links" %>
      </div>
    </div>

    <div class="col-sm-2">
      тут будут рекламные баннеры
    </div>
  </div>

</div>
