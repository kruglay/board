<% content_for :left do %>
    тут будут рекламные баннеры
<% end %>

<% content_for :center do %>
    <div class="panel panel-default devise-bs">
      <%= bootstrap_devise_error_messages! %>
      <div class="panel-heading">
        <h4><%= t('.sign_up', default: 'Sign in') %></h4>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="form-group">
              <%= f.label :s_name %><br/>
              <%= f.text_field :s_name, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :f_name %><br/>
              <%= f.text_field :f_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :m_name %><br/>
              <%= f.text_field :m_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :login %><br/>
              <%= f.text_field :login, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> <%= t('.path_length') %>)</em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit t('.sign_up'), class: "btn btn-default" %>

            </div>
        <% end %>
      </div>
    </div>

    <div class="shared-links">
      <%= render "users/shared/links" %>
    </div>
<% end %>

<% content_for :right do %>
    тут будут рекламные баннеры
<% end %>

<%= render layout: "users/threecolumn" do %>
    <%= yield :left %>
    <%= yield :center %>
    <%= yield :left %>
<% end %>


